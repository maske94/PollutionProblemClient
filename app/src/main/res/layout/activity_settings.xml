<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/android_default_padding"
    tools:context="com.supsi.alessandro.pollutionproblemclient.activities.MainActivity">

    <Button
        android:id="@+id/b_start_scan"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="-35dp"
        android:layout_marginTop="-8dp"
        android:text="Start scan"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_stop_collecting"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="154dp"
        android:text="Stop collecting"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_start_collecting"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="137dp"
        android:layout_marginTop="74dp"
        android:text="Start collecting"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_start_map"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="-18dp"
        android:layout_marginTop="170dp"
        android:text="Start map"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_clear_data"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="-27dp"
        android:layout_marginTop="58dp"
        android:text="Clear data"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_add_random_data"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="-33dp"
        android:layout_marginTop="115dp"
        android:text="Add data"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_poll_data"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:background="@android:color/darker_gray"
        android:gravity="bottom"
        android:maxLines="500"
        android:scrollbars="vertical"
        android:text="@string/label_received_data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_device_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="16dp"
        android:text="Device:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="16dp"
        android:text="no device connected"
        app:layout_constraintLeft_toRightOf="@+id/tv_device_name_label"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
