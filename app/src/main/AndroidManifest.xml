<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.supsi.alessandro.pollutionproblemclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Allows bluetooth connections and data exchange -->
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <!-- Allows bluetooth devices discovery and bluetooth settings manipulation -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- Needed  for BLE from Android 6 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Ensure the this app is available to BLE capable devices only -->
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:name=".PollutionApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ble.PollutionDevicesScanActivity">

        </activity>

    </application>

</manifest>